pipeline {
    agent any
    tools { 
        maven 'maven-3.6.2-local'
    }
    stages {
        stage('build') {
            steps {
                sh 'mvn clean install test -f backend/pom.xml'
            }
        }
    }
    post {
        always {
            junit 'backend/target/surefire-reports/*.xml'
        }
    }
}
