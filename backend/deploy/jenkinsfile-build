pipeline {
    agent any
    tools { 
        maven 'maven-3.6.2-local'
    }
    stages {
        stage('build') {
            steps {
                sh 'mvn -b install test -f backend/pom.xml'
            }
        }
        post {
            always {
                junit 'target/surefire-reports/*.xml'
            }
        }
    }
}
